<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/CardView_pizza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/calzado_claro">

        <ImageView
            android:id="@+id/img_cardview_calzado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/img_calzado_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cardview_marca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca "
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/txt_cardview_modelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo "
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talla: "
                    android:textColor="@color/text_light"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txt_cardview_talla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42 "
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: "
                    android:textColor="@color/text_light"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. "
                    android:textColor="@color/text_light"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txt_cardview_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="299.90 "
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>


</androidx.cardview.widget.CardView>